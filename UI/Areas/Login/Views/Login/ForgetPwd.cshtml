@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <title>EditPwd</title>
    <script type="text/javascript">
        function btnClick() {
            var num = document.getElementById("stuNum").value;
            window.location = "/Login/Login/GetPwd?stunum="+num;
        }
    </script>
</head>
<body style="background-color: #EDF1F9;font-family:'Microsoft YaHei'" >
    <form class="panel panel-primary" style="width:600px;margin:40px auto;height:350px;" id="formpwd" method="post" action="/PersonalManger/CheckMember/SavePwd">
        <div class="panel-heading">
            <h3 class="panel-title">修改密码</h3>
        </div>
        <div class="panel-body">
            <br />
            <div style="width:320px;margin:0 auto;">
                <label style="margin-top:5px;">请输入学号:</label>
                <input type="password" class="form-control" style="width: 200px; float: right;margin-right: 10px;" maxlength="13" id="stuNum" />
            </div>
            <br />
            <div style="width:203px;margin:50px auto;">
                <button type="button" onclick="btnClick();" class="btn btn-info" style="width:200px;height:34px;">确定</button>
            </div>
        </div>
    </form>
</body>
</html>







