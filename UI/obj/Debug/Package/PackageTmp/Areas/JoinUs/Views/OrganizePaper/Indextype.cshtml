@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>整理试卷</title>
    <!-- css -->
    <link href="~/Amaze%20UI/amazeui.min.css" rel="stylesheet" />
    <link href="~/Areas/JoinUs/CSS/organize-paper-index.css" rel="stylesheet" />
</head>
<body>
  @*  <!-- 导航 -->
    <ul id="nav_temp" class="am-nav am-nav-pills">
        <li><a href="/">首页</a></li>
        <li><a href="/JoinUs/QuestionManage/Index/1">题库管理</a></li>
        <li><a href="/JoinUs/PaperManage/Index/1">试卷管理</a></li>
        <li><a href="/JoinUs/AnswerSheet/Index/1">答卷管理</a></li>
    </ul>*@
    <hr id="hr_temp" />
    <!-- hidden -->
    <input type="hidden" id="page_index_now" value="@ViewData["pageIndex"]" />
    <input type="hidden" id="paperId" value="@ViewData["paperId"]" />
    <input type="hidden" id="page_count" />
     <input type="hidden" id="question_index_now" value="@ViewData["questionTypeId"]" />
     <input type="hidden" id="question_content_now" value="@ViewData["questioncontent"]" />
    <!-- list + 分页 -->
    <div id="div_list">
        <form action="/JoinUs/OrganizePaper/Indextype " method="post"> 
            <input type="hidden" name="pageIndex" value="@ViewData["pageIndex"]" />
            <input type="hidden"  name="paperId" value="@ViewData["paperId"]" />
          <input type="text" style="float:left;margin-left:500px;" placeholder="题目内容" name="questioncontent"   />
        题目类型： <select class="am-pagination-select" name="questionType" >
         <option value="3">请选择</option>
        <option value="2">简答题</option>
        <option value="1">选择题</option>
        </select>
        <button class="am-btn am-btn-primary" type="submit" style="margin-bottom:5px;"  >查找</button>
        </form>
        <button class="am-btn am-btn-primary" style="float: left;
  margin-top: -25px;margin-right:20px;" onclick="window.location.href='/JoinUs/PaperManage/Index'" >完成</button>
         <button class="am-btn am-btn-primary" style="float: left;
  margin-top: -25px;" onclick="window.location.href='/JoinUs/PaperManage/PreviewPaper/@ViewData["paperId"]'" >预览</button>
        <!-- 列表 -->
        <table class="am-table am-table-bordered am-table-radius am-table-striped">
            <thead>
                <tr>
                    <td id="question_id">题目ID</td>
                    <td id="question_content">题目内容</td>
                    <td id="question_type">题目类型</td>
                    <td id="question_option">操作</td>
                </tr>
            </thead>
            <tbody id="tbody_list">
            </tbody>
        </table>
        <!-- 分页 -->
        <ul data-am-widget="pagination" class="am-pagination am-pagination-default">
            <li class="am-pagination-first ">
                <a href="#" id="first">第一页</a>
            </li>
            <li class="am-pagination-prev ">
                <a href="#" id="prev">上一页</a>
            </li>
            <li class="am-pagination-select">
                <select>
                    <option>1 / 3</option>
                    <option>2 / 3</option>
                    <option>3 / 3</option>
                </select>
            </li>
            <li class="am-pagination-next ">
                <a href="#" id="next">下一页</a>
            </li>
            <li class="am-pagination-last ">
                <a href="#" id="last">最末页</a>
            </li>
        </ul>
        <!-- 新增按钮 -->
        <button class="am-btn am-btn-primary" id="paperNameTag">试卷：@ViewData["paperName"]&nbsp
             题号：
            @{foreach (var paperId in ViewData["paperIdcount"] as List<string> )
            {
                 @paperId;
            }
            }
        </button>
    </div>
    <!-- js -->
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Amaze%20UI/amazeui.min.js"></script>
    <script src="~/Areas/JoinUs/JS/organize-paper-search.js"></script>
</body>
</html>
