@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>题库管理</title>
    <!-- css -->
    <link href="~/Amaze%20UI/amazeui.min.css" rel="stylesheet" />
    <link href="~/Areas/JoinUs/CSS/question-manage-index.css" rel="stylesheet" />
</head>
<body>
   @* <!-- 导航 -->
    <ul id="nav_temp" class="am-nav am-nav-pills">
        <li><a href="/">首页</a></li>
        <li><a href="/JoinUs/QuestionManage/Index/1">题库管理</a></li>
        <li><a href="/JoinUs/PaperManage/Index/1">试卷管理</a></li>
        <li><a href="/JoinUs/AnswerSheet/Index/1">答卷管理</a></li>
    </ul>*@
    <hr id="hr_temp" />
    <!-- hidden -->
    <input type="hidden" id="page_index_now" value="@ViewData["pageIndex"]" />
    <input type="hidden" id="page_count" />
     <input type="hidden" id="question_index_now" value="@ViewData["questionTypeId"]" />
     <input type="hidden" id="question_content_now" value="@ViewData["questioncontent"]" />
    <!-- list + 分页 -->
    <div id="div_list">
        <button class="am-btn am-btn-secondary am-round" style="margin-right: 50px;margin-left: 200px;" onclick="window.location.href='/JoinUs/QuestionManage/Add'">新增题目</button>
       <div>
        <form action="/JoinUs/QuestionManage/Indextype " method="post"> 
          
        题目类型： <select class="am-pagination-select" name="questionType" style="width: 100px;height:35.5px;">
         <option value="3">请选择</option>
        <option value="2">简答题</option>
        <option value="1">选择题</option>
        </select>
           <input type="text" style="width: 300px;height:35.5px;"  placeholder="题目内容" name="questioncontent"   />
        <button class="am-btn am-btn-secondary am-round" type="submit" style="width: 86px;"  >查找</button>
        </form>
           </div>
        <!-- 列表 -->
        <table class="am-table am-table-bordered am-table-radius am-table-hover">
            <thead>
                <tr>
                    <td id="question_id">题目ID</td>
                    <td id="question_content">题目内容</td>
                    <td id="question_type">题目类型</td>
                    <td id="question_option">操作</td>
                </tr>
            </thead>
            <tbody id="tbody_list">
            </tbody>
        </table>
        <!-- 分页 -->
        <ul data-am-widget="pagination" class="am-pagination am-pagination-default">
            <li class="am-pagination-first ">
                <a href="#" id="first">第一页</a>
            </li>
            <li class="am-pagination-prev ">
                <a href="#" id="prev">上一页</a>
            </li>
            <li class="am-pagination-select">
                <select>
                    <option>1 / 3</option>
                    <option>2 / 3</option>
                    <option>3 / 3</option>
                </select>
            </li>
            <li class="am-pagination-next ">
                <a href="#" id="next">下一页</a>
            </li>
            <li class="am-pagination-last ">
                <a href="#" id="last">最末页</a>
            </li>
        </ul>
        
       
    </div>
    <!-- 模态窗体-题目详情 -->
    <div class="am-modal am-modal-no-btn" tabindex="-1" id="my-modal">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">
                题目详情
                    <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
            </div>
            <!-- 题目详情 -->
            <div class="am-modal-bd">
                <table class="am-table am-table-bordered am-table-radius am-table-striped">
                    <thead id="details_thead">
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <!-- 模态窗体-confirm -->
    <div class="am-modal am-modal-confirm" tabindex="-1" id="my-confirm">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">FINALAB</div>
            <div class="am-modal-bd">
                你，确定要删除这条记录吗？
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn" data-am-modal-cancel>取消</span>
                <span class="am-modal-btn" data-am-modal-confirm>确定</span>
            </div>
        </div>
    </div>
    <!-- js -->
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Amaze%20UI/amazeui.min.js"></script>
  
    <script src="~/Areas/JoinUs/JS/question-manage-search.js"></script>
</body>
</html>
