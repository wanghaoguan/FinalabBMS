@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>试卷管理</title>
    <!-- css -->
    <link href="~/Amaze%20UI/amazeui.min.css" rel="stylesheet" />
    <link href="~/Areas/JoinUs/CSS/paper-manage-index.css" rel="stylesheet" />
</head>
<body>
   @* <!-- 导航 -->
    <ul id="nav_temp" class="am-nav am-nav-pills">
        <li><a href="/">首页</a></li>
        <li><a href="/JoinUs/QuestionManage/Index/1">题库管理</a></li>
        <li><a href="/JoinUs/PaperManage/Index/1">试卷管理</a></li>
        <li><a href="/JoinUs/AnswerSheet/Index/1">答卷管理</a></li>
    </ul>*@
    <hr id="hr_temp" />
    <!-- hidden -->
    <input type="hidden" id="page_index_now" value="@ViewData["pageIndex"]" />
    <input type="hidden" id="page_count" />
    <!-- list + 分页 -->
    <div id="div_list">
        <!-- 列表 -->
        <table class="am-table am-table-bordered am-table-radius am-table-striped">
            <thead>
                <tr>
                    <td id="paper_id">试卷ID</td>
                    <td id="paper_name">试卷名称</td>
                    <td id="paper_type">方向</td>
                    <td id="paper_producer">出卷人</td>
                    <td id="paper_pubdate">出卷日期</td>
                    <td id="paper_option">操作</td>
                </tr>
            </thead>
            <tbody id="tbody_list">
            </tbody>
        </table>
        <!-- 分页 -->
        <ul data-am-widget="pagination" class="am-pagination am-pagination-default">
            <li class="am-pagination-first ">
                <a href="#" id="first">第一页</a>
            </li>
            <li class="am-pagination-prev ">
                <a href="#" id="prev">上一页</a>
            </li>
            <li class="am-pagination-select">
                <select>
                    <option>1 / 3</option>
                    <option>2 / 3</option>
                    <option>3 / 3</option>
                </select>
            </li>
            <li class="am-pagination-next ">
                <a href="#" id="next">下一页</a>
            </li>
            <li class="am-pagination-last ">
                <a href="#" id="last">最末页</a>
            </li>
        </ul>
        <!-- 发布中的试卷 -->
        <button class="am-btn am-btn-warning" id="paper_publishing">发布中试卷：
             @{foreach (var paperId in ViewData["publishingPaperName"] as List<string>)
            {
                 @paperId;
            }
            }</button>
        <!-- 新增按钮 -->
        <button class="am-btn am-btn-primary" id="add_paper" onclick="window.location.href='/JoinUs/PaperManage/Add'">新增试卷</button>
    </div>
    <!-- 模态窗体-confirm -->
    <div class="am-modal am-modal-confirm" tabindex="-1" id="my-confirm">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">FINALAB</div>
            <div class="am-modal-bd">
                你，确定要删除这条记录吗？
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn" data-am-modal-cancel>取消</span>
                <span class="am-modal-btn" data-am-modal-confirm>确定</span>
            </div>
        </div>
    </div>
    <!-- js -->
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Amaze%20UI/amazeui.min.js"></script>
    <script src="~/Areas/JoinUs/JS/paper-manage-index.js"></script>
</body>
</html>
