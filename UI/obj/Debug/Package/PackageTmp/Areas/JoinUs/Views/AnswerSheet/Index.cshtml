@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>答卷管理</title>
    <!-- css -->
    <link href="~/Amaze%20UI/amazeui.min.css" rel="stylesheet" />
    <link href="~/Areas/JoinUs/CSS/answer-sheet-index.css" rel="stylesheet" />

   

</head>
<body>
    <!-- 导航 -->
  @*  <ul id="nav_temp" class="am-nav am-nav-pills">
        <li><a href="/">首页</a></li>
        <li><a href="/JoinUs/QuestionManage/Index/1">题库管理</a></li>
        <li><a href="/JoinUs/PaperManage/Index/1">试卷管理</a></li>
        <li><a href="/JoinUs/AnswerSheet/Index/1">答卷管理</a></li>
    </ul>*@
    <hr id="hr_temp" />
    <!-- hidden -->
    <input type="hidden" id="page_index_now" value="@ViewData["pageIndex"]" />
    <input type="hidden" id="page_count" value="@ViewData["pageCount"]" />
    <!-- list + 分页 -->
    <div id="div_list">
        <!-- 列表 -->
        <table class="am-table am-table-bordered am-table-radius am-table-striped">
            <thead>
                <tr>
                    <td id="answersheet_checkbox"></td>
                    <td id="grade_id">名次</td>
                    <td id="answersheet_id">答卷ID</td>
                    <td id="answersheet_person">答卷人</td>
                    <td id="answersheet_person_info">答卷人信息</td>
                    <td id="answersheet_choice_score">选择题得分</td>
                    <td id="answersheet_brief_score">简答题得分</td>
                    <td id="answersheet_total_score">总分</td>
                    <td id="answersheet_status">状态</td>
                    <td id="answersheet_option">操作</td>                    
                </tr>
            </thead>
            <tr>
                <td>1</td>
                <td>霍腾</td>
                <td>计算机科学与技术专业1203班</td>
                <td>100</td>
                <td>
                    <a>评卷</a>
                    <a>查看</a>
                </td>
            </tr>
            <tbody id="tbody_list">
            </tbody>
        </table>
        <!-- 分页 -->
        <ul data-am-widget="pagination" class="am-pagination am-pagination-default">
            <li class="am-pagination-first ">
                <a href="#" id="first">第一页</a>
            </li>
            <li class="am-pagination-prev ">
                <a href="#" id="prev">上一页</a>
            </li>
            <li class="am-pagination-select">
                <select>
                    <option>1 / 3</option>
                    <option>2 / 3</option>
                    <option>3 / 3</option>
                </select>
            </li>
            <li class="am-pagination-next ">
                <a href="#" id="next">下一页</a>
            </li>
            <li class="am-pagination-last ">
                <a href="#" id="last">最末页</a>
            </li>
        </ul><!-- 新增按钮 -->
       
        <button class="am-btn am-btn-primary"  onclick="window.location.href='/JoinUs/AnswerSheet/TotalToWord'">导出全部试卷</button> 
         <button class="am-btn am-btn-primary" id="toword" >导出试卷</button> 
        <button class="am-btn am-btn-primary"  onclick="window.location.href='/JoinUs/AnswerSheet/TotalToExcel'">导出所有面试者信息</button> 
        <button class="am-btn am-btn-primary" id="pub_interviewer_info" >导出面试者信息</button> 
       @* <button class="am-btn am-btn-primary" onclick="getRank()">查看总排名</button>*@
    </div>
    <!-- 模态窗体-题目详情 -->
    <div class="am-modal am-modal-no-btn" tabindex="-1" id="my-modal">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">
                个人简介
                    <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
            </div>
            <!-- 题目详情 -->
            <div class="am-modal-bd">
                <table class="am-table am-table-bordered am-table-radius am-table-striped">
                    <thead id="details_thead">
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <!-- 模态窗体-成绩排名详情 -->
    <div class="am-modal am-modal-no-btn" tabindex="-1" id="my-score">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">
                成绩排名
                    <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
            </div>
            <!-- 题目详情 -->
            <div class="am-modal-bd">
                <table class="am-table am-table-bordered am-table-radius am-table-striped">
                    <thead id="score">
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <!-- 模态窗体-confirm -->
    <div class="am-modal am-modal-confirm" tabindex="-1" id="my-confirm">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">FINALAB</div>
            <div class="am-modal-bd">
                你，确定要删除这条记录吗？
            </div>
            <div class="am-modal-footer">
                <span class="am-modal-btn" data-am-modal-cancel>取消</span>
                <span class="am-modal-btn" data-am-modal-confirm>确定</span>
            </div>
        </div>
    </div>
    <!-- js -->
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Amaze%20UI/amazeui.min.js"></script>
    <script src="~/Areas/JoinUs/JS/answer-sheet-index.js"></script>
</body>
</html>
